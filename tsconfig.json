{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/*": ["server/commonTypesWithClient/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["vitest/importMeta"],
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx", "*.js", ".eslintrc.js"],
  "exclude": [
    "node_modules",
    "server/server.js",
    "server/service/prismaClient.js",
    "server/server.d.ts",
    "server/server.ts"
  ]
}
